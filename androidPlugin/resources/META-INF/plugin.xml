<idea-plugin version="2">
    <id>com.maihaoche.mazda</id>
    <name>Mazda</name>
    <version>1.0</version>
    <vendor email="yangyang1@maihaoche.com" url="http://b.maihaoche.com/">卖好车</vendor>

    <!--插件简介-->
    <description><![CDATA[
     该插件是用于项目模块化后的切换模块的自动化.
     Git：https://github.com/WangYangYang2014/MaiHaoCheMazDa
     <br>
     <em>卖好车</em>
    ]]></description>

    <!-- 版本更新信息-->
    <change-notes><![CDATA[
      Version 1.0 首次发布，初步实现了grale脚本+sync自动化。后续需要优化交互，并提供更多功能.<br>
      <em>卖好车</em>
    ]]>
    </change-notes>

    <!-- please see http://www.jetbrains.org/intellij/sdk/docs/basics/getting_started/build_number_ranges.html for description -->
    <idea-version since-build="161.0"/>
    <!--<idea-version since-build="145.1617.8"/>-->
    <!-- please see http://www.jetbrains.org/intellij/sdk/docs/basics/getting_started/plugin_compatibility.html
         on how to target different products -->

    <depends>com.intellij.modules.lang</depends>

    <!--扩展组件注册 要是用到applicationConfigurable即项目配置等就在这里注册-->
    <extensions defaultExtensionNs="com.intellij">
        <!-- Add your extensions here -->
    </extensions>

    <!--Action注册，比如在某个菜单下增加一个按钮就要在这注册 -->
    <actions>
        <!-- Add your actions here -->
        <action id="SwitchModuleActionId" class="com.maihaoche.mazda.actions.ActionSwitchModule"
                text="切为单Module" description="切换项目的module"
                icon="/icons/ic_launcher.png"
        >
            <add-to-group group-id="ToolsMenu" anchor="first"/>
            <!--设置快捷键-->
            <!--<keyboard-shortcut keymap="$default" first-keystroke="shift M"/>-->
        </action>
    </actions>

</idea-plugin>